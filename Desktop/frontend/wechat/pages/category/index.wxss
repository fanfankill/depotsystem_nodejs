/* pages/category/index.wxss */
pages {
  height: 100%;
}
.active {
  color: orange;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .right_menu {
  flex: 5;
}
.cates .cates_container .right_menu .goods_gounp .goods_title {
  display: flex;
  padding: 20rpx 0rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .right_menu .goods_gounp .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_menu .goods_gounp .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_menu .goods_gounp .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .right_menu .goods_gounp .goods_list navigator image {
  width: 50%;
}
