/* pages/good_list/index.wxss */
.first_tab .goods_item {
  border-bottom: 5rpx solid gainsboro;
  padding: 20rpx 0;
  display: flex;
}
.first_tab .goods_item .goods_img_wrap {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .goods_img_wrap image {
  width: 70%;
}
.first_tab .good_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .good_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  letter-spacing: 5rpx;
  color: #4d4a4a;
}
.first_tab .good_info_wrap .goods_price {
  margin-top: 20rpx;
  color: sandybrown;
}
